{
  "expo": {
    "name": "DOTO",
    "slug": "doto",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#DC2626"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.doto.app",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "DOTO needs your location to show nearby tasks.",
        "NSPhotoLibraryUsageDescription": "DOTO needs access to your photos to upload images.",
        "NSCameraUsageDescription": "DOTO needs camera access to take photos."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#DC2626"
      },
      "package": "com.doto.app",
      "versionCode": 4,
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "CAMERA"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow DOTO to use your location."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow DOTO to access your photos.",
          "cameraPermission": "Allow DOTO to access your camera."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "5519a148-f81d-466e-8fe0-a3557958c204"
      }
    }
  }
}
